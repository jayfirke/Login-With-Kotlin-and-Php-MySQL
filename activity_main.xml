<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/app_background">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="338dp"
            android:layout_height="606dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/curve_background"
            app:layout_constraintVertical_bias="0.492" app:layout_constraintHorizontal_bias="0.491">

        <EditText
                android:layout_width="311dp"
                android:layout_height="64dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/username_et"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:hint="Enter your Username…" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:textSize="24sp"
                app:layout_constraintHorizontal_bias="0.512" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                android:background="@drawable/username_et_background" android:gravity="center"/>
        <EditText
                android:layout_width="311dp"
                android:layout_height="64dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password_et" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/username_et"
                app:layout_constraintEnd_toEndOf="@+id/username_et"
                app:layout_constraintStart_toStartOf="@+id/username_et" android:hint="Enter your Password…"
                android:textSize="24sp" android:background="@drawable/username_et_background" android:gravity="center"
                app:layout_constraintHorizontal_bias="0.0"/>
        <Button
                android:layout_width="195dp"
                android:layout_height="79dp"
                android:id="@+id/submit_bu" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/password_et"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintStart_toStartOf="@+id/password_et"
                app:layout_constraintEnd_toEndOf="@+id/password_et"
                android:textAllCaps="false" android:textSize="30sp"
                android:background="@drawable/submit_bu"/>
        <ImageView
                android:layout_width="319dp"
                android:layout_height="302dp" app:srcCompat="@drawable/mva_login"
                android:id="@+id/imageView3" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.526"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>